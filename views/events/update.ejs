<html lang="eng">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-9ndCyUaIbzAi2FUVXJi0CjmCapSmO7SnpJef0486qhLnuZ2cdeRhO02iuK6FUUVM" crossorigin="anonymous">
    <title>create </title>
</head>

<body>
    <%- include('../includes/header.ejs') %>

    <div>
        <form action="/event/update/<%= uevent.id %>" method="POST" enctype="multipart/form-data">
            <div>
                <label for="title">Titolo</label>
                <input type="text" id="title" name="title" value="<%= uevent.title  %>" required>
            </div>

            <div>
                <label for="date">Data</label>
                <input id="date" name="date" type="date" value="" required>
            </div>

            <div>
                <label for="tiem">Orario</label>
                <input id="time" name="time" type="time" value="<%= uevent.time %>" required>
            </div>

            <div>
                <label for="address">Indirizzo</label>
                <input type="text" id="address" name="address" value="<%=uevent.address %>" required>
            </div>

            <div>
                <label for="partecipants">Numero massimo partecipanti</label>
                <input type="number" name="participants" id="partcipants" min="1" step="1" value="<%= uevent.max_participants %>" required>
            </div>
          
            <div>
                <label for="description">Descrizione</label>
                <textarea name="description" id="description" cols="30" rows="10"><%=uevent.description %></textarea>
            </div>
            
            <button class="btn btn-primary">Modifica</button>
        </form>
       
        <a class="btn btn-secondary" href="/user/profile">Indietro</a>
    </div>
</body>
<script>
    let ev = <%-JSON.stringify(uevent.date)%>;
    let newDate = ev.slice(0,10)
    const dateInput = document.getElementById('date')
    dateInput.value = newDate
</script>
</html>